<?xml version="1.0"?>
<robot name="my_diff_drive_robot" xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- Include macros -->
    <xacro:include filename="$(find my_diff_drive_robot)/urdf/inertial_macros.xacro" />
    <xacro:include filename="$(find my_diff_drive_robot)/urdf/lidar.xacro" />
    <xacro:arg name="robot_namespace" default="/" />

    <!-- Materials -->
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>
    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>
    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>
    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- Base Link -->
    <link name="base_link" />

    <!-- Chassis -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="0 0 0" />
    </joint>
    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.075" />
            <geometry>
                <box size="0.3 0.3 0.15" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0 0 0.075" />
            <geometry>
                <box size="0.3 0.3 0.15" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0 0 0.075" />
        </xacro:inertial_box>
    </link>

    <!-- Left Wheel -->
    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" />
        </xacro:inertial_cylinder>
    </link>
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel_link" />
        <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
        <dynamics damping="0.5" friction="10.0" />
    </joint>

    <!-- Right Wheel -->
    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" />
        </xacro:inertial_cylinder>
    </link>
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_link" />
        <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
        <dynamics damping="0.5" friction="10.0" />
    </joint>

    <!-- Caster Wheel (front) -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis" />
        <child link="caster_wheel_link" />
        <origin xyz="0.14 0 0" />
        <dynamics damping="0.0" friction="0.0" />
    </joint>
    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" />
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="caster_wheel_link">
        <mu1 value="0.0" />
        <mu2 value="0.0" />
        <kp value="10000000.0" />
        <kd value="1.0" />
        <fdir1 value="1 0 0" />
        <material>Gazebo/Grey</material>
        <turnGravityOff>false</turnGravityOff>
    </gazebo>


    <!-- Insert the LiDAR sensor macro -->
    <xacro:laser parent_link="chassis" />

    <!-- Gazebo Plugin for Differential Drive -->
    <gazebo>
        <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
            <!-- Names of the joints -->
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>

            <!-- Topic on which velocity commands will be received -->
            <command_topic>cmd_vel</command_topic>

            <!-- Publish odometry on /odom -->
            <odometry_topic>odom</odometry_topic>
            <odometry_frame>odom</odometry_frame>
            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>

            <!-- TF for odom->base_link transform -->
            <robot_base_frame>base_link</robot_base_frame>

            <!-- Wheel separation & radius (should match URDF) -->
            <wheel_separation>0.35</wheel_separation>
            <wheel_radius>0.05</wheel_radius>
            <wheel_diameter>0.1</wheel_diameter>

            <!-- Limits -->
            <max_wheel_torque>200</max_wheel_torque>
            <max_wheel_acceleration>10.0</max_wheel_acceleration>

            <!-- Plugin parameters -->
            <update_rate>50</update_rate>
            <publish_tf>true</publish_tf>
        </plugin>
    </gazebo>


</robot>